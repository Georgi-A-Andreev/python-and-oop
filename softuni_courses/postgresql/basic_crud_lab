-- problem 1

SELECT
 	   id,
	   CONCAT(first_name, ' ', last_name) as "Full name",
	   job_title as "Job Title"
  FROM
       employees;

-- problem 2

SELECT
	   id,
	   CONCAT(first_name, ' ', last_name) AS "full name",
	   job_title,
	   salary
  FROM
       employees
 WHERE
 	   salary > 1000
ORDER BY
	   id;

-- problem 3
SELECT *
FROM employees
WHERE department_id = 4 AND salary >= 1000
ORDER BY id

-- problem 4

