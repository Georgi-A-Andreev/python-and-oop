-- problem 1

SELECT department_id,
		COUNT(*) AS employee_count
FROM employees
GROUP BY department_id
ORDER BY department_id

-- problem 2

SELECT department_id,
		COUNT(salary) AS employee_count
FROM employees
GROUP BY department_id
ORDER BY department_id

-- problem 3

SELECT department_id,
		SUM(salary) AS total_salaries
FROM employees
GROUP BY department_id
ORDER BY department_id

-- problem 4

SELECT department_id,
	 	MAX(salary) AS max_salary
FROM employees
GROUP BY department_id
ORDER BY department_id

-- problem 5

SELECT department_id,
	 	MIN(salary) AS min_salary
FROM employees
GROUP BY department_id
ORDER BY department_id

-- problem 6