-- problem 1

CREATE TABLE mountains
(
	id SERIAL PRIMARY KEY,
	name VARCHAR(50)
);

CREATE TABLE peaks(
	id SERIAL PRIMARY KEY,
	name VARCHAR(50),
	mountain_id INT,
	CONSTRAINT fk_peaks_mountains
		FOREIGN KEY (mountain_id)
			REFERENCES mountains(id)
)

-- problem 2

SELECT v.driver_id,
		v.vehicle_type,
		CONCAT(c.first_name, ' ', c.last_name) AS driver_name
FROM campers AS c
JOIN vehicles AS v
ON c.id = v.driver_id










